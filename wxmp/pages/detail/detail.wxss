@import "../../wxParse/wxParse.wxss";

#story-title {
  height: 400rpx;
  background-size: cover;
}

#title-text {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column-reverse;
}

#title-text text {
  display: block;
}

#title-text #title {
  padding: 15rpx 30rpx;
  color: white;
  text-shadow: 0px 1px 2px rgba(0,0,0,0.3);
}

#title-text #image-source {
  padding: 15rpx 30rpx;
  text-align: right;
  color: rgba(255,255,255,.6);
  font-size: 25rpx;
}

#story-content {
  padding: 30rpx;
}

.answer .meta {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.answer .meta .avatar {
  max-width: 34px;
  max-height: 34px;
}

.answer .meta .author {
  font-weight: bolder;
  margin-left: 20rpx;
}

.answer .meta .bio {
  color: #999;
}

#story-content .wxParse-p {
  margin: 30rpx 0;
}

.view-more {
  text-align: center;
  background: #eee;
  padding: 10rpx;
}

.view-more .wxParse-a {
  color: #999;
  font-size: 30rpx;
}

#story-content .wxParse-script {
  display: none;
}

#action {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  padding: 0 5px;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 15px;
  box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
}

#action button {
  padding: 0;
  margin: 0;
  border: none;
  color: white;
  text-shadow:0px 1px 2px rgba(0,0,0,0.3);
}
